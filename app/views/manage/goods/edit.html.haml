#good
	%h1= @good.name
	
	#basics
		= render 'form'
		
	= render 'options'
	= render 'variants'
	
	#images
		= render @good.image_attachers
		= link_to 'Attach an Existing Image', new_manage_good_image_attacher_path( @good )
		
		= semantic_form_for [ :manage, @good, @image ] do |f|
			= f.inputs do
				= f.input :image, as: :file
			= f.submit 'Upload'

	#danger_zone
		= button_to 'Delete This Good', manage_good_path( @good ), method: :delete, confirm: "Are you sure you want to delete #{ @good.name }?"