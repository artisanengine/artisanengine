= content_for( :heading ) { "Edit Good: " + good.name }

:javascript
	$(document).ready( function() {
		$( '#good_images' ).sortable({
			items: '.image_attacher',
			handle: '.handle',
			tolerance: 'pointer',
			update: function() {
				$.ajax({
					type: 'post',
					url: '/manage/goods/#{ good.id }/image_attachers/sort',
					data: $( this ).sortable( 'serialize' ),
				});
			}
		});
	});

#good	
	#basics
		= render 'form'
		
	= render 'images'
	= render 'options'
	= render 'variants'
	
	#danger_zone
		= button_to 'Delete This Good', manage_good_path( good ), method: :delete, confirm: "Are you sure you want to delete #{ good.name }?", class: 'delete'