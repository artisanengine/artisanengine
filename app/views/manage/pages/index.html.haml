= content_for( :heading ) { 'Pages' }

%nav.heading_links
	= link_to 'Add a Page', new_manage_page_path, class: 'add'

%section#pages
	%table#pages
		%thead
			%tr
				%th Title
		%tbody
			- for page in pages
				%tr[ page ]
					%td.title= page.title
					%td.links
						= link_to 'Edit', edit_manage_page_path( page )