- frame_stylesheet ||= "visit"
- frame_js				 ||= nil
- favicon					 ||= nil

%head
	%title= content_for?( :title ) ? content_for( :title ) : current_frame.name
	= yield :meta
	
	= favicon_link_tag favicon if favicon
	
	= stylesheet_link_tag		 "application", frame_stylesheet
	
	/[if lt IE8]
		= stylesheet_link_tag "ie"
	
	= javascript_include_tag "application", "visit"
	= javascript_include_tag frame_js if frame_js
	
	= yield :javascripts
	
	= csrf_meta_tags