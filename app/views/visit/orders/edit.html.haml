= semantic_form_for order, url: checkout_path do |f|
	= f.inputs do
		= f.input :email
		= f.input :subscribed, as: :boolean, label: "Send me news and special offers from #{ current_frame.name }"
	
	#shipping_address
		= f.semantic_errors :shipping_address
		= f.inputs for: [ :shipping_address, new_shipping_address ]
		
		= check_box_tag :shipping_is_billing, '1'
		= label_tag 	  :shipping_is_billing, 'My billing address is the same as my shipping address.'
	
	#billing_address
		= f.semantic_errors :billing_address
		= f.inputs for: [ :billing_address, new_billing_address ]
	
	= f.submit 'Pay with PayPal'