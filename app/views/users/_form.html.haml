= semantic_form_for @user do |f|
	= f.inputs do
		= f.input :frame if can? :manage, User
		= f.input :first_name
		= f.input :last_name
		= f.input :email
		= f.input :password
		= f.input :password_confirmation
		= f.input :role, as: :select, collection: User::ROLES, include_blank: false if can? :manage, User
	
	= f.submit 'Sign Up'