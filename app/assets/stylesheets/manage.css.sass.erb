@import blueprint/grid
@import compass/typography
@import compass/css3/box-shadow
@import compass/css3/box-sizing
@import compass/css3/border-radius
@import compass/css3/inline-block

@import manage/colors
@import manage/typography
@import manage/forms
@import manage/tables
@import manage/layout

a.add
	background: url( '<%= asset_path "icons/add.png" %>' ) no-repeat center left
	
	padding: 1px 0 1px 20px
	
a.attach
	background: url( '<%= asset_path "icons/attach.png" %>' ) no-repeat center left
	
	padding: 1px 0 1px 20px

.handle
	width: 15px
	&:hover
		cursor: move

// ------------------------------------------------------------------
// Images

p.image_info
	+accent
	text-align: center

li#image_image_input
	text-align: center
	padding: 1em 0

#images
	.image
		+float( left )
		width: 220px
		margin-right: (70px/3)
		&:nth-child( 4n+4 )
			margin-right: 0
			
	.links
		+adjust-leading-to( 1.5 )
		text-align: center
		
	input[type=submit]
		float: none
		margin: 0 0 5px 75px

#images_index
	nav.pagination
		+column( 24, true )
		+box-sizing( border-box )
		padding: 0.5em
		
		text-align: right
		
		+border-radius( 10px )
		border: 1px solid darken( $bg-color, 10% )
		
// ------------------------------------------------------------------
// Previews

.preview
	+nested-reset
	
	h1, h2, h3, h4
		+adjust-leading-to( 1 )
	h1
		+adjust-font-size-to( 36px )
	h2
		+adjust-font-size-to( 28px )
	h3
		+adjust-font-size-to( 24px )
	h4
		+adjust-font-size-to( 18px )
	p
		+trailer( 1 )
	strong
		font-weight: bold
	em
		font-style: italic

// ------------------------------------------------------------------
// Sign In

body.sign_in
	header
		display: none