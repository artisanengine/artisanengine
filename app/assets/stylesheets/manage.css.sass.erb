@import blueprint
@import compass/css3

@import manage/colors
@import manage/typography
@import manage/forms
@import manage/tables
@import manage/layout

a.add
	padding: 1px 0 1px 20px
	background: url( '<%= asset_path "icons/add.png" %>' ) no-repeat center left
a.attach
	padding: 1px 0 1px 20px
	background: url( '<%= asset_path "icons/attach.png" %>' ) no-repeat center left
.handle
	width: 15px
	&:hover
		cursor: move

// ------------------------------------------------------------------
// Images

#images
	.image
		+float( left )
		width: 220px
		margin-right: (70px/3)
		&:nth-child(4n+4)
			margin-right: 0
	.links
		+adjust-leading-to( 1.5 )
		text-align: center
	input[type=submit]
		float: none
		margin: 0 0 5px 75px

// ------------------------------------------------------------------
// Previews

.preview
	+nested-reset
	
	h1, h2, h3, h4
		+adjust-leading-to( 1 )
	
	h1
		+adjust-font-size-to( 36px )
	h2
		+adjust-font-size-to( 28px )
	h3
		+adjust-font-size-to( 24px )
	h4
		+adjust-font-size-to( 18px )
	p
		+trailer( 1 )
	strong
		font-weight: bold
	em
		font-style: italic