@import blueprint/grid
@import compass/typography
@import compass/css3/box-shadow
@import compass/css3/text-shadow
@import compass/css3/box-sizing
@import compass/css3/border-radius
@import compass/css3/inline-block
@import compass/css3/box

@import manage/colors
@import manage/typography
@import manage/forms
@import manage/tables
@import manage/layout

@import manage/partials/**/*

a.add
	background: url( '<%= asset_path "icons/add.png" %>' ) no-repeat center left
	padding: 1px 0 1px 20px
	
a.attach
	background: url( '<%= asset_path "icons/attach.png" %>' ) no-repeat center left
	padding: 1px 0 1px 20px

a.address_export
	background: url( '<%= asset_path "icons/book_addresses.png" %>' ) no-repeat center left
	padding: 1px 0 1px 20px

.handle
	width: 15px
	&:hover
		cursor: move

span.status
	background: darken( $bg-color, 15% )
	padding: 0.5em
	font-weight: bold
	color: lighten( $default-text-color, 75% )
	
	+adjust-font-size-to( 12px )
	+adjust-leading-to( 1.5 )
	
	+border-radius( 10px )
	+single-text-shadow
	
	&.pending, &.partial
		background: transparentize( $pending, .60 )
	&.purchased, &.success, &.complete
		background: transparentize( $complete, .60 )
	&.failed, &.incomplete
		background: transparentize( $failed, .50 )
	
.options
	+accent
	font-weight: normal
	color: darken( $bg-color, 35% )
	
.default
	+accent

// ------------------------------------------------------------------
// Images

p.image_info
	+accent
	text-align: center

li#image_image_input
	text-align: center
	padding: 1em 0

#images
	.image
		+float( left )
		+trailer( 0.5 )
		text-align: center
		width: 220px
		height: 240px
		margin-right: (70px/3)
		&:nth-child( 4n+4 )
			margin-right: 0
		
		.image_container
			height: 200px
			img
				+single-box-shadow
			
	.links
		text-align: center
		height: 40px
		
	input[type=submit]
		float: none
		margin: 0 0 5px 75px

#images_index
	nav.pagination
		+column( 24, true )
		+box-sizing( border-box )
		padding: 0.5em
		
		text-align: right
		
		+border-radius( 10px )
		border: 1px solid darken( $bg-color, 10% )
		
// ------------------------------------------------------------------
// Previews

.preview
	+nested-reset
	
	h1, h2, h3, h4
		+adjust-leading-to( 1 )
	h1
		+adjust-font-size-to( 36px )
	h2
		+adjust-font-size-to( 28px )
	h3
		+adjust-font-size-to( 24px )
	h4
		+adjust-font-size-to( 18px )
	p
		+trailer( 1 )
	strong
		font-weight: bold
	em
		font-style: italic

// ------------------------------------------------------------------
// Sign In

body.sign_in
	#notifications
		+leader( 1 )
		+trailer( 1 )
	
// ------------------------------------------------------------------
// Misc. Development Styles

.setting_name
	font-weight: bold