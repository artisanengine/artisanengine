// ------------------------------------------------------------------
// Submit Buttons

input[type=submit], #checkout
	background: $light
	border: 1px solid #666666
	color: black
	cursor: pointer
	padding: 1px
	
	&:hover
		background: lighten( $light, 5% )

#checkout	
	padding: 5px

