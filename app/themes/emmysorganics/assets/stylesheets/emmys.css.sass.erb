// ------------------------------------------------------------------
// Site-wide

.image_container
	+display-box
	+box-align( center )
	+box-orient( horizontal )
	+box-pack( center )
	height: 100%

div#notifications
	+column( 24, true )
	text-align: center
	margin: 0 auto 10px

	.notification
		width: 75%
		margin: 0 auto
		padding: 5px
		+border-radius( 10px )
	.notice
		background-color: rgba( 0, 255, 0, 0.1 )
	.alert
		background-color: rgba( 255, 0, 0, 0.1 )
	.recaptcha_error
		display: none