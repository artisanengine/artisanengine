= content_for( :body_class ) { 'page' }
= content_for( :body_id )		 { 'home' }

#home_wrapper
	%section#feature
		= image_tag 'almond_sale.jpg'
	
	%section#featured_products
		#featured_products_top
			%h2 Products
			.links
				= link_to 'Shop Online'
				= link_to 'Buy Wholesale'	
		
		= render_cell :featured_products, :display, frame: current_frame, limit: 5

	#left.blocks
		#connect.block
			%h2 Connect
			.block_content
				#signup_image
					= image_tag 'signup.jpg'

				#signup_text
					%h3 Monthly Email List
					%p Get news, discounts, and more!

				= form_tag '#', class: 'formtastic' do
					= text_field_tag 'email'
					= submit_tag 'Sign Up'

		#commitment.block
			%h2 Our Commitment
			.block_content
				= image_tag 'commitment.jpg'
			.block_bottom
				= link_to 'Learn more...', '#'

	#middle.blocks
		#blog.block
			%h2 emmy's blog
			.block_content
				= render_cell :recent_posts, :display, frame: current_frame
			.block_bottom
				= link_to 'View all posts', blog_path

		#find-a-store
			= image_tag 'find_a_store.jpg'

	#right.blocks
		#press.block
			%h2 Press
			.block_content
				%p.placeholder Press
			.block_bottom
				= link_to 'Read the press'

		#product.block
			%h2 Featured Product
			.block_content
				= render_cell :featured_products, :display, frame: current_frame
			.block_bottom
				= link_to 'More Info', current_frame.featured_case.goods_in_display_order.first
		
		#networking
			%p.placeholder Networking Links